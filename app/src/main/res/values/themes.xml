<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zhaibao" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/selected</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--CheckBox选中颜色-->
        <item name="colorControlActivated">@color/selected</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="WorkDisplayTheme" parent="Theme.Zhaibao">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ImageDisplayTheme" parent="Theme.Zhaibao">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>